{{#content "script" mode="append"}}
<script src="/assets/plugins/bootstrap-datepicker/js/bootstrap-datepicker.js" type="text/javascript"></script>
<script type="text/javascript" src="/assets/plugins/jquery-inputmask/jquery.inputmask.min.js"></script>
<script>
    function baba() {
        $(".DatePickers").datepicker({
            format: 'dd/mm/yyyy',
            endDate: '+0d',
            autoclose: true
        });
        $(".number_validators").inputmask("mask", {
            "mask": "9999999999"
        });
    }
    function xxx() {
        $(".mmmm").hide();
        $(".mmmm").show();

    }

    $(document).ready(function () {
        baba();
        $("#UploadExcelType1Frm").validate({
            rules: {
                file_name_type_1: {
                    required: true,
                    extension: "xls|xlsx"
                }

            },
            messages:
            {
                file_name_type_1: {
                    required: "Please choose a file",
                    extension: "only xlsx or xls file"
                },
                file_name_type_2: {
                    required: "Please choose a file",
                }
            }
        });

        $('#UploadFileType1Frm').validate({
            rules: {
                file_name_type_2: {
                    required: true,
                },
                messages: {
                    file_name_type_2: {
                        required: "Please choose a file",
                    }
                }
            }
        });

        $("#addCasesFrm").validate({
            rules: {
                cab_no: {
                    required: true
                },
                inpound_status: {
                    required: true
                },
                name_of_ps: {
                    required: true
                },
                judge_name: {
                    required: true
                },
                court: {
                    required: true
                },
                driver_name: {
                    required: true
                },
                driver_mobile_no: {
                    required: true
                },
                advocate: {
                    required: true
                }
            },
            messages: {
                cab_no: {
                    required: "Cab no. can't be blank"
                },
                inpound_status: {
                    required: "Impound Status can't be blank"
                },
                name_of_ps: {
                    required: "Name of PS can't be blank"
                },
                judge_name: {
                    required: "Judge name can't be blank"
                },
                court: {
                    required: "Please select court name"
                },
                driver_name: {
                    required: "Driver name can't be blank"
                },
                driver_mobile_no: {
                    required: "Driver mobile no can't be blank"
                },
                advocate: {
                    required: "Advocate can't be blank"
                }
            }
        });

        $("#addCasesTypeFrm").validate({
            rules: {
                case_no: {
                    required: true
                },
                case_type: {
                    required: true
                },
                case_file: {
                    required: true
                },
                judge_name: {
                    required: true
                }
            },
            messages: {
                case_no: {
                    required: "Case no. can't be blank"
                },
                case_type: {
                    required: "Case type can't be blank"
                },
                case_file: {
                    required: "Case file can't be blank"
                },
                judge_name: {
                    required: "Judge name can't be blank"
                }
            }
        });

        $(document).on("click", "#addCaseFormRowBtn", function () {
            $(".addRowCaseform1").append($(".addRowCaseform1Row").html());
            baba();
            xxx();

        });
    });
    $(document).on('click', "#caseRowRemoveBtn", function (e) {
        $(this).closest(".row").remove();
    });

</script> {{/content}}