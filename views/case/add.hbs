<!-- START CONTAINER FLUID -->
<div class=" container-fluid   container-fixed-lg">
    <div class="row">
        <div class="col-lg-12">
            <!-- START card -->
            <div class="card card-default">
                <div class="card-title">
                    {{#if duplicate_email_lawyer}}
                    <div class="alert alert-danger">
                        <strong>Error! </strong>{{duplicate_email_lawyer}}
                    </div>
                    {{/if}}
                    <div class="pull-left">
                        <h5>
                            Add {{case_type.tag}}
                        </h5>
                    </div>
                    <div class="pull-right">
                        {{#if_eq case_type.name "CT1"}}
                        <a href="/case_excel_format/caseType_1.xlsx" download class="btn btn-primary btn-cons m-t-15"
                            id="caseAddBtn">
                            <i class="fa fa-download"></i> Download Excel Template
                        </a>
                        <a href="javascript:void(0)" data-toggle="modal" data-target="#import" class="btn btn-primary btn-cons m-t-15">
                            <i class="fa fa-upload"></i> Upload Excel
                        </a>
                        <a href="javascript:void(0)" data-toggle="modal" data-target="#importFile" class="btn btn-primary btn-cons m-t-15">
                            <i class="fa fa-upload"></i> Upload File
                        </a>
                        {{/if_eq}}
                    </div>
                </div>
                <div class="card-body">
                    {{#if_eq case_type.name "CT1"}}
                    <form role="form" id="addCasesFrm" method="POST" action="/case/add">
                        <div class="addRowCaseform1">
                            <input type="hidden" name="_csrf" value="{{csrfToken}}">
                            <input type="hidden" name="case_type_name" value="{{case_type.name}}">
                            <input type="hidden" name="case_type_id" value="{{case_type.id}}">
                            <div class="row well p-2 m-b-25">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Cab No.</label>
                                        <span class="requiredErr">*</span>
                                        <input type="text" class="form-control" name="cab_no[]" id="cab_no" placeholder="Enter cab No.">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Date Of Assignment</label>
                                        <span class="requiredErr">*</span>
                                        <div class="input-group date">
                                            <input type="text" class="form-control DatePickers" name="date_of_assign[]"
                                                id="date_of_assign" placeholder="Select Date of Assignment">
                                            <div class="input-group-append ">
                                                <span class="input-group-text">
                                                    <i class="fa fa-calendar"></i>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Impound Status</label>
                                        <span class="requiredErr">*</span>
                                        <input type="text" class="form-control" name="inpound_status[]" id="inpound_status"
                                            placeholder="Enter Impound Status">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Name of PS</label>
                                        <span class="requiredErr">*</span>
                                        <input type="text" class="form-control" name="name_of_ps[]" id="name_of_ps"
                                            placeholder="Enter Name of PS">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Judge Name</label>
                                        <span class="requiredErr">*</span>
                                        <input type="text" class="form-control" name="judge_name[]" id="judge_name"
                                            placeholder="Enter Judge Name">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Court</label>
                                        <span class="requiredErr">*</span>
                                        <select class="full-width" data-init-plugin="select2" name="court[]" id="court">
                                            <option value="">Select Court</option>
                                            {{#each court}}
                                            <option value="{{this.id}}">{{this.name}}</option>
                                            {{/each}}
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Driver Name</label>
                                        <span class="requiredErr">*</span>
                                        <input type="text" class="form-control" name="driver_name[]" id="driver_name"
                                            placeholder="Enter Driver Name">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Driver Mobile No.</label>
                                        <span class="requiredErr">*</span>
                                        <input type="text" class="form-control number_validator" name="driver_mobile_no[]"
                                            id="driver_mobile_no" placeholder="Enter Driver Mobile Number">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Advocate Name</label>
                                        <span class="requiredErr">*</span>
                                        <input type="text" class="form-control" name="advocate[]" id="advocate"
                                            placeholder="Enter Advocate Name">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="text-center m-auto">
                            <button class="btn btn-primary btn-cons m-t-10" type="submit">
                                <i class="fa fa-plus"></i> Add Case</button>
                            <button class="btn btn-primary btn-cons m-t-10" type="button" id="addCaseFormRowBtn">
                                <i class="fa fa-plus"></i> Add Row</button>
                        </div>
                    </form>
                    {{else}}
                        <form role="form" id="addCasesTypeFrm" method="POST" action="/case/type/add" enctype="multipart/form-data" >
                        <div class="addRowCaseform1">
                            <input type="hidden" name="_csrf" value="{{csrfToken}}">
                            <input type="hidden" name="case_type_name" value="{{case_type.name}}">
                            <input type="hidden" name="case_type_id" value="{{case_type.id}}">
                            <div class="row well p-2 m-b-25">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Case No.</label>
                                        <span class="requiredErr">*</span>
                                        <input type="text" class="form-control" name="case_no" id="case_no" placeholder="Enter cab No.">
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Case Type</label>
                                        <span class="requiredErr">*</span>
                                        <select class="full-width" data-init-plugin="select2" name="case_type" id="case_type">
                                            <option value="">Select Court</option>
                                            {{#each rateList}}
                                            <option value="{{this.id}}">{{this.type_of_case}}</option>
                                            {{/each}}
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Case File</label>
                                        <span class="requiredErr">*</span>
                                        <input type="file" class="form-control" name="case_file" id="case_file" placeholder="Enter cab No.">
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Case Description</label>
                                        <span class="requiredErr">*</span>
                                        <textarea type="text" class="form-control" name="case_description" id="case_description"
                                            placeholder="Enter Impound Status"> </textarea>
                                    </div>
                                </div>
                                
                            </div>
                        </div>
                        <div class="text-center m-auto">
                            <button class="btn btn-primary btn-cons m-t-10" type="submit">
                                <i class="fa fa-plus"></i> Add Case</button>
                        </div>
                    </form>
                    {{/if_eq}}
                </div>
            </div>
            <!-- END card -->
        </div>
    </div>
</div>
