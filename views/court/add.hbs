<div class="jumbotron" data-pages="parallax">
    <div class=" container-fluid   container-fixed-lg sm-p-l-0 sm-p-r-0">
        <div class="inner">
            <!-- START BREADCRUMB -->
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="/dashboard">Home</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="/court">Court</a>
                </li>
                <li class="breadcrumb-item active">Add Court</li>
            </ol>
            <!-- END BREADCRUMB -->
        </div>
    </div>
</div>
<!-- END JUMBOTRON -->
<!-- START CONTAINER FLUID -->
<div class=" container-fluid   container-fixed-lg">
    <div class="row">
        <div class="col-lg-12">
            
            <!-- START card -->
            <div class="card card-default">
                <div class="card-body">
                    <h5>
                        Add Court
                    </h5>
                    <form role="form" id="addcourtFrm" method="POST" action="/court/add">
                        <input type="hidden" name="_csrf" value="{{csrfToken}}"> 
                        <div class="form-group">
                            <label>Name</label><span class="requiredErr">*</span>
                            <input type="text" class="form-control" name="name" id="name" placeholder="Enter Jurisdiction Name">
                        </div>
                        <button class="btn btn-primary btn-cons m-t-10" type="submit">Add Court</button>
                    </form>
                </div>
            </div>
            <!-- END card -->
        </div>
    </div>
</div>
 {{#content "script" mode="append"}}
<script>
    $(document).ready(function () {
        $("#addcourtFrm").validate({
            rules: {
                name: {
                    required: true
                }
            },
            messages: {
                name: {
                    required: "Name can't be blank"
                }
            }
        });
    });
</script> {{/content}}