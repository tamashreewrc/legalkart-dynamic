                                        <a class="active" data-toggle="tab" role="tab" data-target="#tab2hellowWorld" href="#">Profile</a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="#" data-toggle="tab" role="tab" data-target="#tab2PracticeArea">Practice Areas</a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="#" data-toggle="tab" role="tab" data-target="#tab2FollowUs">Rate</a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="#" data-toggle="tab" role="tab" data-target="#tab2Inspire">View Cases</a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="#" data-toggle="tab" role="tab" data-target="#tab2Ratings">Reviews &amp; Ratings</a>
                                    </li>
                                </ul>
