<div class=" container-fluid   container-fixed-lg">
    <div class="row">
        <div class="col-lg-12">
            <!-- START card -->
            <div class="card card-default">
                <div class="card-body">
                    <div class="pull-left">
                        <h5>Advocate {{lawyer.first_name}} {{lawyer.last_name}}</h5>
                    </div> 
