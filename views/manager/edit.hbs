<div class="jumbotron" data-pages="parallax">
    <div class=" container-fluid   container-fixed-lg sm-p-l-0 sm-p-r-0">
        <div class="inner">
            <!-- START BREADCRUMB -->
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="/dashboard">Home</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="/manager">City</a>
                </li>
                <li class="breadcrumb-item active">Edit City</li>
            </ol>
            <!-- END BREADCRUMB -->
        </div>
    </div>
</div>
<!-- END JUMBOTRON -->
<!-- START CONTAINER FLUID -->
<div class=" container-fluid   container-fixed-lg">
    <div class="row">
        <div class="col-lg-12">

            <!-- START card -->
            <div class="card card-default">
                <div class="card-body">
                    <h5>
                        Edit City
                    </h5>
                    {{#if error_edit_manager}}
                    <div class="alert alert-danger">
                        <strong>Error! </strong>{{error_edit_manager}}
                    </div>
                    {{/if}}
                    <form role="form" id="editManagerFrm" method="POST" action="/manager/edit/{{manager.id}}">
                        <div class="row">
                            <input type="hidden" name="_csrf" value="{{csrfToken}}">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>First Name</label><span class="requiredErr">*</span>
                                    <input type="text" class="form-control" name="first_name" id="first_name"
                                        placeholder="Enter First Name" value="{{manager.first_name}}">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Last Name</label><span class="requiredErr">*</span>
                                    <input type="text" class="form-control" name="last_name" id="last_name" placeholder="Enter Last Name" value="{{manager.last_name}}">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Email Id</label><span class="requiredErr">*</span>
                                    <input type="text" class="form-control" name="email" id="email" placeholder="Enter Email Id" value="{{manager.email}}">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Mobile No</label><span class="requiredErr">*</span>
                                    <input type="text" class="form-control number_validator" name="mobile" id="mobile"
                                        placeholder="Enter Mobile No" value="{{manager.mobile}}">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>State</label>
                                    <span class="requiredErr">*</span>
                                    <select class="full-width" data-init-plugin="select2" name="state" id="state" disabled>
                                        <option value="">Select State</option>
                                        {{#each state}}
                                        <option value="{{this.id}}" {{#if_eq this.id ../manager.state_id}} selected {{/if_eq}}>{{this.name}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>City</label>
                                    <span class="requiredErr">*</span>
                                    <select class="full-width" data-init-plugin="select2" name="city" id="city">
                                        <option value="">Select City</option>
                                        {{#each city}}
                                        <option value="{{this.id}}" {{#if_eq this.id ../manager.city_id}} selected {{/if_eq}}>{{this.name}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>
                        </div>
                        <button class="btn btn-primary btn-cons m-t-10" type="submit">Update City</button>
                    </form>
                </div>
            </div>
            <!-- END card -->
        </div>
    </div>
</div>
{{#content "script" mode="append"}}
<script>
    $(document).ready(function () {
        $("#editManagerFrm").validate({
            rules: {
                first_name: {
                    required: true
                },
                last_name: {
                    required: true
                },
                email: {
                    required: true,
                    email: true
                },
                mobile: {
                    required: true
                },
                state: {
                    required: true
                },
                city: {
                    required: true
                }
            },
            messages: {
                first_name: {
                    required: "First Name can't be blank"
                },
                last_name: {
                    required: "Last Name can't be blank"
                },
                email: {
                    required: "Email can't be blank"
                },
                mobile: {
                    required: "Mobile can't be blank"
                },
                state: {
                    required: "Please select state"
                },
                city: {
                    required: "Please select city"
                }
            }
        });
    });
</script> {{/content}}